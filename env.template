TZ=Asia/Jerusalem
N8N_PORT=5678

# External URL config (adjust to your server/DNS)
N8N_HOST=moht-webui01.moh.health.gov.il
N8N_PROTOCOL=https
WEBHOOK_URL=https://moht-webui01.moh.health.gov.il/

# n8n encryption key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=change_me_to_a_secure_hex_64

# Postgres
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=n8n

# text2vec-transformers model
T2V_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Backups: run daily at 02:00 Israel time (midnight UTC), keep 30 days
BACKUP_TIME_CRON=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Weaviate backup prefix
WEAVIATE_BACKUP_PREFIX=weaviate

# Weaviate API Key Authentication
WEAVIATE_API_KEY=change_me_to_a_secure_api_key
WEAVIATE_API_KEY_USER=admin

# Traefik SSL Configuration
ACME_EMAIL=your-email@moh.health.gov.il
TRAEFIK_AUTH=admin:$$2y$$10$$your-hashed-password


